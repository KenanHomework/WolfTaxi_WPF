<UserControl x:Class="WolfTaxi_WPF.Usercontrols.EditTexblock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WolfTaxi_WPF.Usercontrols"
             mc:Ignorable="d" Height="30" Width="Auto"
             d:DesignHeight="30" d:DesignWidth="800">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <StackPanel  Orientation="Horizontal">
                <Label Content="{Binding Hit,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Foreground="#60686c" FontSize="25" FontFamily="Lucida Console" VerticalContentAlignment="Center" HorizontalAlignment="Left" FontWeight="Heavy" />

                <TextBlock Text="{Binding Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="#b3b3b3" FontSize="25" FontFamily="Lucida Console" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="DemiBold"/>
            </StackPanel>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
