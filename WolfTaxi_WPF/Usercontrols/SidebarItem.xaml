<UserControl x:Class="WolfTaxi_WPF.Usercontrols.SidebarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WolfTaxi_WPF.Usercontrols"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Width="230">

        <Image Source="{Binding ImageSource,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                Stretch="None" Margin="12,0,0,0" Name="Img"/>

        <TextBlock Text="{Binding Text}" Margin="25,0,0,0" Style="{StaticResource font_style}"/>

    </StackPanel>
</UserControl>
